<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Helpline Name -->
        <TextView
            android:id="@+id/tvHelplineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AASRA"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Helpline Description -->
        <TextView
            android:id="@+id/tvHelplineDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="24x7 helpline for emotional support"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Helpline Number -->
        <TextView
            android:id="@+id/tvHelplineNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="9820466726"
            android:textColor="@color/emerald_green"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Call Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Call Now"
            android:textColor="@color/white"
            app:backgroundTint="@color/emerald_green"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_phone"
            app:iconGravity="start"
            app:iconTint="@color/white" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
