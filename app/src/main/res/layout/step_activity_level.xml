<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <!-- Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/activity_icon"
        android:src="@drawable/ic_activity"
        app:tint="@color/emerald_green" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_level_title"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_level_subtitle"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <!-- Activity Level Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilActivityLevel"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/select_activity_level"
        app:boxStrokeColor="@color/emerald_green"
        app:hintTextColor="@color/emerald_green">

        <AutoCompleteTextView
            android:id="@+id/actvActivityLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
