<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Workout"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your fitness journey"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />

        <!-- Gym Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGym"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Gradient -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_activity"
                        android:contentDescription="Gym Icon"
                        app:tint="@color/white"
                        android:layout_marginBottom="16dp" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gym &amp; Strength"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build muscle and power"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginBottom="20dp" />

                    <!-- Explore Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExploreGym"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        android:textColor="@color/emerald_green"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="12dp" />

                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Yoga Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardYoga"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Gradient -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_mindfulness" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_yoga"
                        android:contentDescription="Yoga Icon"
                        app:tint="@color/white"
                        android:layout_marginBottom="16dp" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yoga &amp; Mindfulness"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find balance and peace"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginBottom="20dp" />

                    <!-- Explore Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExploreYoga"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        android:textColor="@color/emerald_green"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="12dp" />

                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
