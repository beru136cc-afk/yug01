<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Counter"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp" />

    <!-- Circular Step Display -->
    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="48dp">

        <!-- Circular Progress Bar -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/circularProgress"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:progress="0"
            app:indicatorColor="@color/emerald_green"
            app:indicatorSize="280dp"
            app:trackColor="@color/background_light"
            app:trackThickness="20dp" />

        <!-- Step Count in Center -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Steps icon"
                android:src="@drawable/ic_activity"
                app:tint="@color/emerald_green" />

            <TextView
                android:id="@+id/tvStepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/emerald_green"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="steps"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Goal: 10,000 steps"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step tracking is OFF"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- ON/OFF Toggle Button -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/btnToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Step Tracking"
        android:textSize="18sp"
        android:textColor="@color/text_primary" />

</LinearLayout>
